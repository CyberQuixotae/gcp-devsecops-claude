# =============================================================================
# terraform.tfvars.example - GCP Security Configuration Template
# =============================================================================
# Copy this file to terraform.tfvars and update the values for your environment
#
# SECURITY WARNING: Never commit terraform.tfvars to version control!
# Add terraform.tfvars to your .gitignore file
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED VARIABLES - UPDATE THESE VALUES
# -----------------------------------------------------------------------------

# Your GCP Project ID (REQUIRED)
# Get this from: gcloud config get-value project
project_id = "my-security-project-123456"

# Your GCP Organization ID (REQUIRED)
# Get this from: gcloud organizations list
organization_id = "123456789012"

# Your organization's domain (REQUIRED)
# This should be your company's email domain
organization_domain = "mycompany.com"

# Security team email for alerts (REQUIRED)
# This email will receive all security notifications
security_team_email = "security-team@mycompany.com"

# -----------------------------------------------------------------------------
# REGIONAL CONFIGURATION
# -----------------------------------------------------------------------------

# Primary region (choose one close to your users)
region = "us-central1"

# Primary zone within the region
zone = "us-central1-a"

# -----------------------------------------------------------------------------
# NETWORK CONFIGURATION
# -----------------------------------------------------------------------------

# Private subnet CIDR (ensure no conflicts with existing networks)
private_subnet_cidr = "10.0.1.0/24"

# -----------------------------------------------------------------------------
# COMPUTE CONFIGURATION
# -----------------------------------------------------------------------------

# Machine type for security instances
compute_machine_type = "e2-medium"

# Boot disk image (use latest stable)
compute_boot_image = "debian-cloud/debian-11"

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# KMS key rotation period (30 days recommended)
kms_key_rotation_period = "2592000s"

# Environment (dev/staging/prod)
environment = "prod"

# Enable advanced security features
enable_confidential_computing = true
enable_shielded_vms = true

# VPC Flow Logs sampling rate (0.5 = 50%)
vpc_flow_logs_sampling_rate = 0.5

# -----------------------------------------------------------------------------
# RESOURCE LABELS
# -----------------------------------------------------------------------------

project_labels = {
  environment = "production"
  team        = "security"
  managed-by  = "terraform"
  cost-center = "security-ops"
  compliance  = "required"
}
